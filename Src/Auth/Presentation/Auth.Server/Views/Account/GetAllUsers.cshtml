@model List<Auth.Server.Quickstart.ViewModels.GetUserModel>;
<div class="container">
    <h1>User List</h1>
    @if (Model == null || !Model.Any()) {
        <p>No users found.</p>
    }
    else {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email Address</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model) {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>

                            <a href="@Url.Action("DeleteUser","Account",new {userId = user.Id})" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
   

</div>